<div class="card bg-gradient-light">
  <div class="card-header bg-white d-flex align-items-center justify-content-between">
    <h5 class="m-0">Articles</h5>
    <button type="button" url="/article/new" redirect="true" method="post" class="btn-primary btn-sm linkable">
      New<i class="fas fa-plus ml-2"></i>
    </button>
  </div>
  <div class="card-body">
    <?- include('../layouts/autocomplete', {
      source: '/article/json',
      template: 'autocomplete-app',
      search: 'name',
      limit: 5,
      placeholder: 'Search Apps...'
    }) ?>
    <? if (articles.length > 0) { ?>
      <div class="mt-4 mb-1">Recently Created</div>
      <ul class="list-group">
        <? articles.forEach(article => { ?>
          <li class="list-group-item d-flex justify-content-between">
            <span>
              <span class="h6"><?= article.title ?></span>
            </span>
            <a href="/article/edit/<?= article.id ?>">Edit</a>
          </li>
        <? }) ?>
      </ul>
    <? } ?>
  </div>
</div>
